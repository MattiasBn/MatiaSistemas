# ======================================================
# Etapa 1 ‚Äî Build do Laravel com Composer
# ======================================================
FROM php:8.2-fpm AS build

WORKDIR /var/www/html

# Instalar depend√™ncias do sistema
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libzip-dev \
    libonig-dev \
    && docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd zip

# Copiar Composer do container oficial
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Copiar o c√≥digo Laravel
COPY . /var/www/html

# Instalar depend√™ncias Laravel (produ√ß√£o)
RUN composer install --no-dev --optimize-autoloader

# Permiss√µes corretas
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache \
    && chmod -R 775 /var/www/html/storage /var/www/html/bootstrap/cache


# ======================================================
# Etapa 2 ‚Äî Imagem final para produ√ß√£o
# ======================================================
FROM php:8.2-fpm

WORKDIR /var/www/html

# Instalar Nginx e Supervisor
RUN apt-get update && apt-get install -y nginx supervisor && rm -rf /var/lib/apt/lists/*

# Copiar aplica√ß√£o e configs do build
COPY --from=build /var/www/html /var/www/html
COPY nginx.conf /etc/nginx/sites-available/default
COPY supervisor.conf /etc/supervisor/conf.d/supervisord.conf

# Exp√¥r a porta HTTP
EXPOSE 80

# ======================================================
# ENTRYPOINT ‚Äî tudo autom√°tico
# ======================================================
CMD bash -c "\
echo 'üß© Iniciando container Laravel...' && \
if [ ! -f /var/www/html/.env ]; then \
    echo '‚öôÔ∏è Nenhum .env detectado ‚Äî usando vari√°veis do Render'; \
    cp /var/www/html/.env.example /var/www/html/.env || true; \
fi && \
php artisan config:cache || true && \
php artisan route:cache || true && \
echo '‚úÖ Laravel pronto (usando APP_KEY do Render)' && \
exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf"
